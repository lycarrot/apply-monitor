{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "lib": [
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],    
        "downlevelIteration": true,
        "declaration": true,
        "declarationDir": "types",
        "typeRoots": [
            "node_modules/@types"
        ],
