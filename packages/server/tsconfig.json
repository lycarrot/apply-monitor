{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES6", "DOM"],
    "importHelpers": true,
    "allowJs": true,
    "composite": true,
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": [
    "./app/**/*.ts",
    "./app/**/*.d.ts",
    "./index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}