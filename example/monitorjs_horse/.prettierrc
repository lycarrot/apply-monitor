{
    "printWidth": 120,
    "tabWidth": 4,
    "parser": "babel",
    "trailingComma": "none",
    "jsxBracketSameLine": true,
    "semi": true,
    "singleQuote": true,
    "htmlWhitespaceSensitivity": "ignore",
    "overrides": [
        {
            "files": ["*.json", ".eslintrc", ".tslintrc", ".prettierrc", ".tern-project"],
            "options": {
                "parser": "json",
                "tabWidth": 4
            }
        },
        {
            "files": "*.{css,sass,scss,less}",
            "options": {
                "parser": "css",
                "tabWidth": 4
            }
        },
        {
            "files": "*.{html}",
            "options": {
                "parser": "html",
                "tabWidth": 4
            }
        },
        {
            "files": "*.ts",
            "options": {
                "parser": "typescript"
            }
        }
    ]
}
